<%= simple_form_for(@contacto_cliente) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :telefono %>
    <%= f.input :correo %>
    <%= f.input :departamento %>
    <%= f.input :cargo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
