<h1>Clientes</h1>
<%= link_to 'Crear Cliente', new_cliente_path, class: "btn btn-info" %>
<%= link_to 'Regresar a Catálogos', catalogos_path, class: "btn btn-success" %>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>Nombre Comercial</th>
      <th>RFC</th>
      <th>Colonia</th>
      <th>Estado</th>
      <th>Tel Oficina</th>
      <th>Correo</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
    <tr>
        <td><%= cliente.nombre_comercial %></td>
        <td><%= cliente.rfc %></td>
        <td><%= cliente.colonia %></td>
        <td><%= cliente.estado %></td>
        <td><%= cliente.telefono_oficina %></td>
        <td><%= cliente.correo %></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to "Modificar", edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: '¿Confirma eliminar el Registro?' } %></td>
      
    <% end %>
   </tr>
  </tbody>
</table>

  
