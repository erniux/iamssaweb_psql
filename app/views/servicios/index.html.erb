<h1>Servicios</h1>
<%= link_to 'Crear Servicio', new_servicio_path, class: "btn btn-info" %>
<%= link_to 'Regresar a Catálogos', catalogos_path, class: "btn btn-success" %>

<table class="table">
  <thead>
    <tr>
      <th>Concepto</th>
      <th>Cantidad</th>
      <th>Precio A</th>
      <th>Precio B</th>
      <th>Precio C</th>
      <th>Tipo Servicio</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.concepto %></td>
        <td><%= servicio.cantidad %></td>
        <td><%= servicio.precio_a %></td>
        <td><%= servicio.precio_b %></td>
        <td><%= servicio.precio_c %></td>
        <td><%= servicio.tipo_servicio %></td>
        <td><%= link_to 'Mostrar', servicio %></td>
        <td><%= link_to 'Modificar', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: '¿Confirma eliminar el Registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

