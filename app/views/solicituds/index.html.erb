<h1>Solicitudes</h1>
<%= link_to 'Nueva Solicitud', new_solicitud_path, class: 'btn btn-info' %>

<table class="table">
  <thead>
    <tr>
      <th>Num. Solicitud</th>
      <th>Cliente</th>
      <th>Proyecto</th>
      <th>Estatus</th>
      <th>Usuario</th>
      <th>Contacto</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.id %></td>
        <td><%= solicitud.cliente.nombre_comercial %></td>
        <td><%= solicitud.proyecto %></td>
        <td><%= solicitud.estatus %></td>
        <td><%= solicitud.user.name %></td>
        <td><%= solicitud.cliente_contacto.nombre + ' ' + solicitud.cliente_contacto.appaterno  %></td>
        <td><%= link_to 'Mostrar', solicitud %></td>
        <td><%= link_to 'Modificar', edit_solicitud_path(solicitud) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


