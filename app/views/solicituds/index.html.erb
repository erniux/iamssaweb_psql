<p id="notice"><%= notice %></p>

<h1>Solicituds</h1>

<table>
  <thead>
    <tr>
      <th>Proyecto</th>
      <th>Estatus</th>
      <th>Comentarios</th>
      <th>User</th>
      <th>Cliente</th>
      <th>Cliente contacto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.proyecto %></td>
        <td><%= solicitud.estatus %></td>
        <td><%= solicitud.comentarios %></td>
        <td><%= solicitud.user.name %></td>
        <td><%= solicitud.cliente.nombre_comercial %></td>
        <td><%= solicitud.cliente_contacto.nombre + ' ' + solicitud.cliente_contacto.appaterno  %></td>
        <td><%= link_to 'Show', solicitud %></td>
        <td><%= link_to 'Edit', edit_solicitud_path(solicitud) %></td>
        <td><%= link_to 'Destroy', solicitud, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

