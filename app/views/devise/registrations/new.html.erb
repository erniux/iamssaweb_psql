<h2>Registro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                label: 'Nombre',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nombre" }%>
    <%= f.input :email,
                label: 'Correo Electrónico',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: 'Contraseña',
                hint: ("mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "contaseña_nueva" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: 'Confirmar Contraseña',
                input_html: { autocomplete: "contraseña_nueva" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registro" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
